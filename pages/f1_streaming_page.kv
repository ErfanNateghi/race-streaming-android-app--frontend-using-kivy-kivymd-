                                opacity: 1
                        StreamPageCard:
                            on_press: app.go_to_minor_pages('f1_drivers')
                            height:dp(35)
                            radius: dp(10), dp(10), dp(10), dp(10)
                            FitImage:
                                source: "f1_grid_2.png"
                                size_hint_y: 1
                                pos_hint: {"top": 1}
                                radius: dp(10), dp(10), dp(10), dp(10)
                                opacity: 1
                        StreamPageCard:
                            on_press: app.go_to_minor_pages('f1_drivers')
                            height:dp(35)
                            radius: dp(10), dp(10), dp(10), dp(10)
                            FitImage:
                                source: "f1_grid_3.png"
